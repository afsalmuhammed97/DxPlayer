<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DxPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorPrimaryVariant">@color/bg_color</item>
        <item name="colorOnPrimary">@color/bg_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_color</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/teal_700</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/bg_color</item>
        <item name="toolbarStyle">@style/MyActionBar</item>
        <!-- Customize your theme here. -->

        <item name="actionBarItemBackground">@color/bg_color</item>


        <!--Full screen-->
        <!--        <item name="android:windowFullscreen">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowLightStatusBar">true</item>-->

    </style>


    <style name="MyActionBar" >
        <item name="android:background">@color/bg_color</item>
    </style>

    <style name="bottom_nav_style">
        <item name="android:background">@color/bg_color</item>
        <item name="itemTextAppearanceInactive">@color/white</item>
        <item name="itemTextAppearanceActive">@color/button_color</item>
    </style>

    <style name="HorizontalProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:background">@null</item>
        <item name="android:scaleY">@null</item>
        <item name="android:scaleX">@null</item>
        <item name="android:padding">@null</item>
    </style>

    <style name="ThemeOverlay.DxPlayer.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>


</resources>