<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DxPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/button_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_A400</item>
        <item name="colorSecondaryVariant">@color/button_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->

        <!--        <item name="actionBarItemBackground"  >?attr/colorPrimaryVariant</item>-->

        <!-- Customize your theme here. -->
        <!--        <item name="actionBarItemBackground"  >?attr/colorPrimaryVariant</item>-->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>


    </style>

    <style name="bottom_nav_style">
        <item name="itemTextAppearanceActive">@color/button_color</item>
        <item name="itemTextColor">@color/button_color</item>
        <item name="itemIconTint">@color/button_color</item>

    </style>

    <style name="active">
        <item name="color">@color/bg_color</item>
    </style>

    <style name="HorizontalProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:background">@null</item>
        <item name="android:scaleY">@null</item>
        <item name="android:scaleX">@null</item>
        <item name="android:padding">@null</item>
    </style>

    <style name="ThemeOverlay.DxPlayer.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.DxPlayer.Fullscreen" parent="Theme.DxPlayer">
        <item name="android:actionBarStyle">@style/Widget.Theme.DxPlayer.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
</resources>