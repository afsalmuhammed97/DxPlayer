<?xml version="1.0" encoding="utf-8"?><LinearLayout    android:id="@+id/root_layout"    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:gravity="center_vertical"    android:padding="@dimen/_10dp"      android:theme="@style/ClickableViewBackground"   >    <androidx.cardview.widget.CardView        android:id="@+id/new_bt"        android:layout_width="@dimen/_60dp"        android:layout_height="@dimen/_60dp"        android:backgroundTint="@color/bg_color2"        app:cardCornerRadius="@dimen/_8dp"      >        <ImageView            android:id="@+id/song_image"            android:background="@android:color/transparent"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:scaleType="centerCrop"            android:src="@drawable/fish" />    </androidx.cardview.widget.CardView>     <LinearLayout         android:layout_width="0dp"         android:layout_height="wrap_content"         android:padding="@dimen/_8dp"         android:layout_weight="1"         android:background="@android:color/transparent"         android:orientation="vertical">         <TextView             android:id="@+id/title_text"             android:layout_width="wrap_content"             android:layout_height="wrap_content"             android:paddingHorizontal="@dimen/_8dp"             android:singleLine="true"             android:text="Tittle"             android:textSize="@dimen/text_14sp"             android:textStyle="bold"             android:background="@android:color/transparent"             />         <TextView             android:id="@+id/artist_name"             android:layout_width="wrap_content"             android:layout_height="wrap_content"             android:paddingHorizontal="@dimen/_8dp"             android:paddingTop="@dimen/_4dp"             android:text="artist name"             android:textSize="@dimen/text_14sp"             android:background="@android:color/transparent"             app:layout_constraintBottom_toBottomOf="parent"             tools:layout_editor_absoluteX="151dp" />     </LinearLayout>    <ImageView         android:visibility="gone"        android:id="@+id/more_bt"        android:layout_width="@dimen/_25dp"        android:layout_height="match_parent"        android:src="@drawable/ic_baseline_more_vert_24"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toTopOf="parent"        android:contentDescription="@string/add_songs" />    <CheckBox        android:visibility="gone"        android:id="@+id/checkBox"        style="@style/CustomCheckbox02"        android:layout_width="wrap_content"        android:layout_height="wrap_content"       /></LinearLayout>