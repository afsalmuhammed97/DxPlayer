<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    >    <TextView        android:id="@+id/category_name"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="category"        android:paddingHorizontal="@dimen/_5dp"        android:textSize="@dimen/item_head_text"        tools:ignore="SpUsage" />    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/videos_rv"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@+id/category_name"        ><!--        android:layout_marginBottom="@dimen/_5dp"-->    </androidx.recyclerview.widget.RecyclerView>    <TextView        android:id="@+id/show_more"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/videos_rv"        android:layout_alignParentEnd="true"        android:paddingHorizontal="@dimen/_5dp"        android:text="@string/show_more"        android:paddingTop="@dimen/_5dp"        android:textColor="@color/button_color"        android:textSize="@dimen/text_12sp"        tools:ignore="RtlSymmetry" />          <TextView              android:layout_width="wrap_content"              android:layout_height="wrap_content"              android:layout_below="@id/videos_rv"              android:layout_alignParentStart="true"/></RelativeLayout>