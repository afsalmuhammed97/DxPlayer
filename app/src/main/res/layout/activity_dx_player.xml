<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.DxPlayerActivity"
    android:id="@+id/drawer_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:controller_layout_id="@layout/custom_controller_layout"
            app:hide_on_touch="true"
            app:layout_constraintTop_toTopOf="parent"
            app:player_layout_id="@layout/exo_player_view"
            app:use_controller="true"


            />
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:id="@+id/volume_layout"
            android:layout_width="@dimen/_40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30dp"
            android:backgroundTint="@color/card_background_color"
            app:cardCornerRadius="@dimen/_4dp"
            >



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/_15dp">
                <ProgressBar
                    android:id="@+id/volume_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/_8dp"
                    android:layout_height="@dimen/_140dp"
                    android:progressDrawable="@drawable/progress_vertical"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2dp"
                    android:src="@drawable/ic_baseline_volume_up_24" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:id="@+id/brightness_layout"
            android:visibility="gone"
            android:layout_width="@dimen/_40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_30dp"
            android:backgroundTint="@color/card_background_color"
            app:cardCornerRadius="@dimen/_4dp">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/_15dp">
                <ProgressBar
                    android:id="@+id/brightness_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/_8dp"
                    android:layout_height="@dimen/_140dp"
                    android:progressDrawable="@drawable/progress_vertical"/>


                <ImageView
                    android:id="@+id/dfs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2dp"
                    android:src="@drawable/ic_baseline_light_24" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_20dp">

            <ImageView
                android:id="@+id/skip_left"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_keyboard_double_arrow_left_24" />

            <TextView
                android:id="@+id/skipp_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15dp"
                android:background="@android:color/transparent"
                android:gravity="bottom"
                android:padding="@dimen/_5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text20sp"
                android:textStyle="bold"
                android:visibility="gone"

                />

            <ImageView
                android:id="@+id/skip_right"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_keyboard_double_arrow_right_24" />
        </LinearLayout>


<!--    <ProgressBar-->
<!--        android:id="@+id/progressBar"-->
<!--        style="?android:attr/progressBarStyle"-->
<!--        android:layout_width="80dp"-->
<!--        android:layout_height="80dp"-->
<!--        android:layout_centerInParent="true"-->
<!--        app:layout_constraintBottom_toBottomOf="parent" />-->

    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/dx_player_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        android:overScrollMode="always"
        android:background="@android:color/transparent"
        >
        <include
            layout="@layout/exoplayer_drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>