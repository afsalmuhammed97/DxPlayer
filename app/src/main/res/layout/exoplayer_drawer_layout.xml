<?xml version="1.0" encoding="utf-8"?>    <LinearLayout        xmlns:android="http://schemas.android.com/apk/res/android"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:background="@drawable/player_drawer_bg"        android:paddingBottom="@dimen/_10dp"        android:paddingStart="@dimen/_15dp">        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="Audio Track"            android:textColor="@color/white"            android:textSize="@dimen/text_18sp"            android:textStyle="bold"            android:padding="@dimen/_10dp"/>        <RadioGroup            android:id="@+id/radio_group"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical">        </RadioGroup>        <CheckBox            android:layout_marginTop="@dimen/_15dp"            android:id="@+id/checkBox"            android:buttonTint="@color/white"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="@string/sub_tittle"            android:textColor="@color/white"/>    </LinearLayout>