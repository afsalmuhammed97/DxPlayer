<?xml version="1.0" encoding="utf-8"?><com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="@dimen/video_item_width"    android:layout_height="@dimen/video_item_hight"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:backgroundTint="@color/card_background_color"    android:layout_marginHorizontal="@dimen/_5dp"    app:cardCornerRadius="@dimen/_6dp">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <ImageView            android:id="@+id/imageView"            android:layout_width="match_parent"            android:layout_height="match_parent"            tools:srcCompat="@tools:sample/avatars"            android:contentDescription="@string/videos" />        <ImageView             android:src="@drawable/ic_play_circle"            android:layout_width="@dimen/_50dp"            android:layout_height="@dimen/_50dp"             android:layout_centerHorizontal="true"            android:layout_centerVertical="true"            />        <TextView            android:id="@+id/duration"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textColor="@color/white"            android:textSize="@dimen/item_title"            android:layout_alignParentEnd="true"            android:layout_alignParentBottom="true"            android:layout_margin="@dimen/_5dp"            android:text="duration"            />    </RelativeLayout></com.google.android.material.card.MaterialCardView>