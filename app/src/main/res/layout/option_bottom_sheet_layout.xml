<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <TextView        android:id="@+id/tittle_text"        android:paddingHorizontal="@dimen/_10dp"        android:paddingVertical="@dimen/_10dp"        android:background="@color/bg_color2"        android:textSize="@dimen/text_16sp"        android:layout_width="match_parent"        android:textColor="@color/white"        android:layout_height="wrap_content"        android:text="TextView"        android:drawablePadding="@dimen/_15dp"        app:drawableStartCompat="@drawable/ic_library_music_24"         />    <TextView        android:id="@+id/artist_name"        android:paddingHorizontal="@dimen/_10dp"        android:paddingVertical="@dimen/_10dp"        android:background="@color/bg_color2"        android:textSize="@dimen/text_16sp"        android:layout_width="match_parent"        android:textColor="@color/white"        android:layout_height="wrap_content"        android:text="TextView"        android:drawablePadding="@dimen/_15dp"        app:drawableStartCompat="@drawable/ic_library_music_24"        />    <TextView        android:id="@+id/folder_name"        android:paddingHorizontal="@dimen/_10dp"        android:paddingVertical="@dimen/_10dp"        android:background="@color/bg_color2"        android:textSize="@dimen/text_16sp"        android:layout_width="match_parent"        android:textColor="@color/white"        android:layout_height="wrap_content"        android:text="TextView"        android:drawablePadding="@dimen/_15dp"        app:drawableStartCompat="@drawable/ic_library_music_24"        />    <TextView        android:id="@+id/delete_bt"        android:paddingHorizontal="@dimen/_10dp"        android:paddingVertical="@dimen/_10dp"        android:background="@color/bg_color2"        android:textSize="@dimen/text_16sp"        android:layout_width="match_parent"        android:textColor="@color/white"        android:layout_height="wrap_content"        android:text="TextView"        android:drawablePadding="@dimen/_15dp"        app:drawableStartCompat="@drawable/ic_library_music_24"        /></LinearLayout>