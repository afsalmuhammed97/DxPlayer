<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/root_layout"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/player_drawer_bg"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center_vertical"        android:orientation="horizontal"        android:paddingVertical="@dimen/_20dp">        <ImageView            android:id="@+id/cancel_bt"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_margin="@dimen/_10dp"            android:src="@drawable/ic_baseline_close_24"            android:theme="@style/ClickableView" />        <com.google.android.material.textview.MaterialTextView            android:id="@+id/title_text"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginEnd="@dimen/_40dp"            android:layout_weight="1"            android:paddingHorizontal="@dimen/_2.5dp"            android:paddingVertical="@dimen/_5dp"            android:singleLine="true"            android:textColor="@color/white"            android:textSize="@dimen/text_18sp"            android:textStyle="bold" />        <!--     <ImageView-->        <!--         android:id="@+id/option_bt"-->        <!--         android:layout_width="wrap_content"-->        <!--         android:layout_height="wrap_content"-->        <!--         android:padding="@dimen/_5dp"-->        <!--         android:layout_marginEnd="@dimen/_5dp"-->        <!--         android:src="@drawable/ic_baseline_tune_24"-->        <!--         android:theme="@style/ClickableView" />-->    </LinearLayout>    <androidx.cardview.widget.CardView        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_marginHorizontal="@dimen/_25dp"        android:layout_marginVertical="@dimen/_10dp"        android:layout_weight="1"        android:elevation="@dimen/_5dp"        app:cardCornerRadius="@dimen/_15dp">        <ImageView            android:id="@+id/song_image"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:contentDescription="@string/add_songs"            android:scaleType="centerCrop"            android:src="@drawable/fish" />    </androidx.cardview.widget.CardView>    <!--    <de.hdodenhof.circleimageview.CircleImageView-->    <!--        android:padding="@dimen/_25dp"-->    <!--        android:id="@+id/song_image"-->    <!--        android:layout_weight="1"-->    <!--        xmlns:app="http://schemas.android.com/apk/res-auto"-->    <!--        android:layout_width="match_parent"-->    <!--        android:layout_height="0dp"-->    <!--        android:src="@drawable/fish"-->    <!--        app:civ_border_width="2dp"-->    <!--        app:civ_border_color="#00BCD4"/>-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="@dimen/_30dp"        android:paddingHorizontal="@dimen/_20dp">        <ImageView            android:id="@+id/eque_bt"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:padding="@dimen/_5dp"            android:src="@drawable/ic_baseline_tune_24"            android:theme="@style/ClickableView" />        <ImageView            android:id="@+id/fav_bt"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentEnd="true"            android:padding="@dimen/_5dp"            android:src="@drawable/ic_baseline_favorite_border_24"            android:theme="@style/ClickableView" />        <SeekBar            android:id="@+id/seekBar"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginVertical="@dimen/_40dp"            android:progressTint="@color/white" />        <TextView            android:id="@+id/player_position"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@+id/seekBar"            android:text="00:00"            android:textColor="@color/white" />        <TextView            android:id="@+id/duration"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@+id/seekBar"            android:layout_alignParentEnd="true"            android:text="00:00"            android:textColor="@color/white" />    </RelativeLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="@dimen/_50dp"        android:gravity="center_vertical"        android:orientation="horizontal"        android:paddingHorizontal="@dimen/_10dp"        android:paddingVertical="@dimen/_20dp"        android:weightSum="5">        <ImageView            android:id="@+id/exo_shuffle"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:padding="@dimen/_5dp"            android:src="@drawable/ic_baseline_shuffle_24"            android:theme="@style/ClickableView" />        <ImageView            android:id="@+id/exo_prev"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:padding="@dimen/_5dp"            android:src="@drawable/ic_baseline_skip_previous_34"            android:theme="@style/ClickableView" />        <ImageView            android:id="@+id/exo_play_pause"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_weight="1"            android:paddingVertical="@dimen/_5dp"            android:src="@drawable/ic_baseline_play_48"            android:theme="@style/ClickableView" />        <ImageView            android:id="@+id/exo_next"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:padding="@dimen/_5dp"            android:src="@drawable/ic_baseline_skip_next_34"            android:theme="@style/ClickableView" />        <ImageView            android:id="@+id/exo_repeat"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:padding="@dimen/_5dp"            android:src="@drawable/ic_baseline_repeat_24"            android:theme="@style/ClickableView" />    </LinearLayout></LinearLayout>