<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"     android:id="@+id/root_layout"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"      android:background="@drawable/player_drawer_bg"  > <LinearLayout     android:layout_width="match_parent"     android:layout_height="wrap_content"     android:gravity="center_vertical"     android:paddingVertical="@dimen/_20dp"     android:orientation="horizontal">     <ImageView         android:id="@+id/cancel_bt"         android:layout_width="wrap_content"         android:layout_height="wrap_content"         android:layout_margin="@dimen/_10dp"         android:src="@drawable/ic_baseline_close_24"         android:theme="@style/ClickableView" />     <com.google.android.material.textview.MaterialTextView         android:id="@+id/title_text"         android:layout_width="0dp"         android:layout_height="wrap_content"         android:layout_weight="1"         android:paddingVertical="@dimen/_5dp"         android:paddingHorizontal="@dimen/_2.5dp"         android:singleLine="true"         android:textColor="@color/white"         android:textSize="@dimen/text_18sp"         android:textStyle="bold" />     <ImageView         android:id="@+id/option_bt"         android:layout_width="wrap_content"         android:layout_height="wrap_content"         android:padding="@dimen/_5dp"         android:layout_marginEnd="@dimen/_5dp"         android:src="@drawable/ic_baseline_tune_24"         android:theme="@style/ClickableView" /> </LinearLayout>    <ImageView        android:id="@+id/song_image"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:layout_marginHorizontal="@dimen/_20dp"        android:scaleType="centerCrop"        android:src="@drawable/fish"/>       <RelativeLayout            android:layout_marginTop="@dimen/_30dp"           android:layout_width="match_parent"           android:paddingHorizontal="@dimen/_20dp"           android:layout_height="wrap_content">           <ImageView               android:id="@+id/play_list_bt"               android:layout_width="wrap_content"               android:layout_height="wrap_content"               android:padding="@dimen/_5dp"               android:src="@drawable/ic_baseline_playlist_play_24"               android:theme="@style/ClickableView" />           <ImageView               android:id="@+id/fav_bt"               android:layout_width="wrap_content"               android:layout_height="wrap_content"               android:layout_alignParentEnd="true"               android:padding="@dimen/_5dp"               android:src="@drawable/ic_baseline_favorite_border_24"               android:theme="@style/ClickableView" />           <SeekBar               android:id="@+id/seekBar"               android:layout_width="match_parent"               android:layout_height="wrap_content"               android:layout_centerVertical="true"               android:layout_marginVertical="@dimen/_40dp"               android:progressTint="@color/white" />           <TextView               android:id="@+id/player_position"               android:layout_width="wrap_content"               android:layout_height="wrap_content"               android:layout_below="@+id/seekBar"               android:text="00:00"               android:textColor="@color/white" />           <TextView               android:id="@+id/duration"               android:layout_width="wrap_content"               android:layout_height="wrap_content"               android:layout_below="@+id/seekBar"               android:layout_alignParentEnd="true"               android:text="00:00"               android:textColor="@color/white" />       </RelativeLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:weightSum="5"        android:gravity="center_vertical"        android:layout_marginBottom="@dimen/_50dp"        android:paddingVertical="@dimen/_20dp"        android:paddingHorizontal="@dimen/_10dp"        android:orientation="horizontal">        <ImageView            android:id="@+id/exo_shuffle"            android:layout_weight="1"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:padding="@dimen/_5dp"            android:src="@drawable/ic_baseline_shuffle_24"            android:theme="@style/ClickableView" />        <ImageView            android:id="@+id/exo_prev"            android:layout_weight="1"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:padding="@dimen/_5dp"            android:src="@drawable/ic_baseline_skip_previous_34"            android:theme="@style/ClickableView" />        <ImageView            android:id="@+id/exo_play_pause"            android:layout_width="wrap_content"            android:layout_weight="1"            android:layout_height="wrap_content"            android:paddingVertical="@dimen/_5dp"            android:src="@drawable/ic_baseline_play_48"            android:theme="@style/ClickableView" />        <ImageView            android:id="@+id/exo_next"            android:layout_weight="1"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:padding="@dimen/_5dp"            android:src="@drawable/ic_baseline_skip_next_34"            android:theme="@style/ClickableView" />        <ImageView            android:id="@+id/exo_repeat"            android:layout_weight="1"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:padding="@dimen/_5dp"            android:src="@drawable/ic_baseline_repeat_24"            android:theme="@style/ClickableView" />    </LinearLayout></LinearLayout>